---

env:
  http_proxy:
  https_proxy:

macports_packages:
  - erlang
  - htop
  - "'MacVim @7.4.snapshot73_1+huge+python27+ruby20'"
  - readline
  - the_silver_searcher
  - tmux
  - tor

dotfiles:
  dir: ~/.dotfiles
  git:
    git_path: /usr/bin/git
  rcm:
    rcup_path: /opt/local/bin/rcup
    repo:
      name: https://github.com/ryankanno/dotfiles.git
      version: HEAD

anyenv:
  git_url: https://github.com/riywo/anyenv.git
  install_dir: ~/.anyenv
  environments:
    - { 'environment':'pyenv', 'versions': ['2.7.9', '3.2.6', '3.3.6'] }
    - { 'environment':'rbenv', 'versions': ['1.9.3-p551'] }

dock:
  persistent_apps:
    - /Applications/iTerm.app
